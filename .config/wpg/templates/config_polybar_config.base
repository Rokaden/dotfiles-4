[colors]
background = {color0}
foreground = {color15}
active = {active}
inactive = {inactive}
highlight = {color1}
error = {color4}

[bar/main]
override-redirect = false
wm-restack = bspwm
width = 100%
height = 24
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

background = #00000000
foreground = {color15}

line-size = 0
label-line-color = #00000000

border-color = #00000000
border-top-size = 0
border-left-size = 0
border-right-size = 0

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Iosevka Nerd Font:size=10

locale = en_GB.UTF-8
enable-ipc = true

modules-left = time date gap mood
modules-center = bspwm gap xwindow
modules-right = battery gap wlan eth netact gap mpd volume

tray-position = none
tray-padding = 10
tray-background = ${{colors.inactive}}

[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; But if you rename your bspwm monitors with bspc -n this option will no longer
; behave correctly.
; Default: true
pin-workspaces = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = true

; Set the scroll cycle direction
; Default: true
reverse-scroll = true

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces
; containing 'code' in the label
; Default: false
fuzzy-match = false

; ws-icon-[0-9]+ = label;icon
; Note that the label needs to correspond with the bspwm workspace name

ws-icon-0 = 1;    
ws-icon-1 = 2;    
ws-icon-2 = 3;    
ws-icon-3 = 4;    
ws-icon-4 = 5;    
ws-icon-5 = 7;  華  
ws-icon-6 = 8;    
ws-icon-7 = 9;    
ws-icon-8 = 10;    
ws-icon-default =     

; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(focused|urgent|occupied|empty)>
;   <label-mode> - gets replaced with <label-(monocle|tiled|fullscreen|floating|locked|sticky|private)>
; Default: <label-state>
format = <label-state>

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

; If any values for label-dimmed-N are defined, the workspace/mode
; colors will get overridden with those values if the monitor is out of focus
; To only override workspaces in a specific state, use:
;   label-dimmed-focused
;   label-dimmed-occupied
;   label-dimmed-urgent
;   label-dimmed-empty
label-dimmed-foreground = {inactive}
label-dimmed-background = #00000000

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-focused = %icon%
label-focused-foreground = {color15}
label-focused-background = {color2}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-occupied = %icon%
label-occupied-foreground = {color15}
label-occupied-background= {active}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = {color15}
label-urgent-background = {color4}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = %icon%
label-empty-foreground = {color15}
label-empty-background = {inactive}

; The following labels will be used to indicate the layout/mode
; for the focused workspace. Requires <label-mode>
;
; Available tokens:
;   None
;label-monocle = 
;label-tiled = 
;label-fullscreen = 
;label-floating = 
;label-pseudotiled = P
;label-locked = 
;label-locked-foreground = #bd2c40
;label-sticky = 
;label-sticky-foreground = #fba922
;label-private = 
;label-private-foreground = #bd2c40
;label-marked = M

; Separator in between workspaces
label-separator-padding = 0
label-separator-foreground = #00000000

[module/gap]
type = custom/text
content = -
content-background = #00000000
content-foreground = #00000000
content-padding = 0

[module/mood]
type = custom/script
exec = head -n1 ~/.config/polybar/mood
interval = 1
format = <label>
format-background = {color2}
format-foreground = {color15}
format-padding = 1
label =  %output:0:25:...%
click-left = theme_selector

[module/xwindow]
type = internal/xwindow
format-background = ${{colors.highlight}}
format-padding = 1
label = %title:0:20: ...%

[module/mpd]
type = internal/mpd
format-online = <label-song>

label-song = " %title%"
label-song-maxlen = 20
label-song-ellipsis = true

format-playing-padding = 1
format-playing-background = ${{colors.highlight}}
format-paused-padding = 1
format-paused-background = ${{colors.inactive}}

[module/netact]
type = internal/network
interface = ${{file:~/.config/polybar/netadpt}}
;accumulate-stats = true
interval = 1.0

format-connected = <label-connected>
format-connected-padding = 1
format-connected-background = ${{colors.active}}
format-connected-foreground = ${{colors.foreground}}

format-disconnected =

label-connected = " %downspeed%  %upspeed%"

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected-padding = 1
format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
format-connected-background = {color2}

format-disconnected =

ramp-signal-0 = 
ramp-signal-foreground = ${{colors.foreground}}

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-padding = 1
format-connected-background = ${{colors.inactive}}
label-connected = ""

[module/time]
type = internal/date
interval = 5

time = " %I:%M %p"

format-padding = 1
format-background = {active}

label = %time%

[module/date]
type = internal/date
interval = 5

date = " %A, %d %B"

format-padding = 1
format-background = {inactive}

label = %date%

[module/volume]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 1
format-volume-background = ${{colors.active}}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground = ${{colors.foreground}}

format-muted-prefix = " "
format-muted-foreground = {color15}
format-muted-background = ${{colors.error}}
label-muted = MUTE
format-muted-padding = 1

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging =   <animation-charging> <label-charging>
format-charging-padding = 1
format-discharging-padding = 1
format-discharging = <ramp-capacity> <label-discharging>
format-full =  <ramp-capacity>
format-full-padding = 1
format-full-background = ${{colors.inactive}}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${{colors.foreground}}

animation-charging-foreground = ${{colors.foreground}}
animation-charging-framerate = 500
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
format-charging-background = ${{colors.inactive}}
format-discharging-background = ${{colors.active}}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
