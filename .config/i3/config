exec_always --no-startup-id ~/.config/polybar/launch.sh

#//theme
set $coloract "{active}"
set $colorin "{inactive}"

set_from_resource $color15 i3wm.color15 "{color15}"
set_from_resource $split i3wm.color13 "{color13}"
set_from_resource $coloru i3wm.color5 "{color5}"
set_from_resource $color0 i3wm.color0 "{color0}"
set_from_resource $color8 i3wm.color8 "{color8}"

# class                 border    backgr    text    indicator child_border
client.focused          $coloract $coloract $color15 $split  $coloract
client.focused_inactive $coloract $coloract $color15 $split  $colorin
client.unfocused        $colorin  $colorin  $color15 $split  $colorin
client.urgent           $coloru   $coloru   $color15 $coloru $coloru
client.placeholder      $color0   $color8   $color15 $color0 $color8
client.background       $color0

font pango:Iosevka Nerd Font 13

default_border pixel 2
default_floating_border pixel 2
gaps inner 12
gaps outer 0

#//window rules
for_window [title="HideMe"] move scratchpad
for_window [title="sxiv"] floating enable
for_window [class="mpv"] floating enable, move container to workspace $ws10
for_window [class="mpv"] [floating] resize set 1024 576, move position center

assign [class="qutebrowser"] $ws2
assign [class="URxvt" instance="filemgr"] $ws3
assign [class="Org.gnome.gedit"] $ws4
assign [class="Gimp-2.10"] $ws4

#//launch binds
bindsym Mod4+Return exec urxvtc
bindsym Mod4+Shift+Return exec urxvtc -e ranger
bindsym Mod4+Mod1+Return exec qutebrowser
bindsym Mod4+Shift+d exec --no-startup-id dmenu_run -b -fn 'Iosevka Nerd Font-12' -nb "{inactive}" -nf "{color15}" -sb "{color1}" -sf "{color15}"
bindsym Mod4+Tab exec --no-startup-id rofi -show combi -combi-modi "window#drun#run" -modi combi
