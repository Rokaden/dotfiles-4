set $ws9 "9"
set $ws10 "10"

#//startup
exec --no-startup-id compton --config ~/.config/compton/compton.conf -b --unredir-if-possible
#exec --no-startup-id comfy
exec --no-startup-id wpg -m
exec --no-startup-id mpd
