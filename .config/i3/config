#//easy access toggles
#focus_follows_mouse no
bindsym Mod4+j exec --no-startup-id ~/working/testscript

#//variables
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
