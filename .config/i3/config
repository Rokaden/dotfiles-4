mode "resize" {{
        bindsym Left resize shrink width 1 px or 1 ppt
        bindsym Down resize grow height 1 px or 1 ppt
        bindsym Up resize shrink height 1 px or 1 ppt
        bindsym Right resize grow width 1 px or 1 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Mod4+r mode "default"
}}
bindsym Mod4+r mode "resize"
bindsym Mod4+Mod1+Left resize shrink width 10 px or 10 ppt
bindsym Mod4+Mod1+Down resize grow height 10 px or 10 ppt
bindsym Mod4+Mod1+Up resize shrink height 10 px or 10 ppt
bindsym Mod4+Mod1+Right resize grow width 10 px or 10 ppt

