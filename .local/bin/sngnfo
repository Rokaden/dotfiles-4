#!/bin/sh

npchk=$(mpc current)
[ ! "$npchk" ] && dunstify -r 4088001 -t 3000 "" "\nyou might wanna try \npressing play first \njust sayin' " -i "~/.config/dunst/no_art.png" && exit

song=$(mpc current -f "%title%")
artist=$(mpc current -f "%artist%")
album=$(mpc current -f "%album%")
nsong=$(mpc queued -f "%title%")
nartist=$(mpc queued -f "%artist%")
nalbum=$(mpc queued -f "%album%")

dunstify -r 4088001 "" "\n$song \n$artist ﴁ\n$album " -i "/tmp/dartc.png"
sleep 3
dunstify -r 4088001 "" "\n$nsong \n$nartist ﴁ\n$nalbum " -i "/tmp/dartn.png"
sleep 3
dunstify -C 4088001
