#!/bin/sh

dunstify -r 4088003 "scrot in:" "3..." -i "~/.config/dunst/sshot.svg"
sleep 1
dunstify -r 4088003 "scrot in:" "2.." -i "~/.config/dunst/sshot.svg"
sleep 1
dunstify -r 4088003 "scrot in:" "1." -i "~/.config/dunst/sshot.svg"
sleep 1
dunstify -C 4088003
sleep 1
ffmpeg -f x11grab -video_size 1920x1080 -i $DISPLAY -vframes 1 ~/working/scrot_$(date '+%Y%m%d-%H%M%S').png
